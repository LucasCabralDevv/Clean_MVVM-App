<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.pokemons.details.DetailsPokemonFragment">

    <ImageView
        android:id="@+id/detailsPokemonImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/mainLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/secondLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PokÃ©mon: "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsNamePokemonTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Pikachu"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEIGHT: "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsHeightPokemonTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="1.09 m"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:text="WEIGHT: "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsWeightPokemonTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.0 kg"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WEAKNESSES: "
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detailsWeaknessesPokemonTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fire"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/detailsImagePokemonImageView"
            android:layout_width="350dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>